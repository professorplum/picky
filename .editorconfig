root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,html,css}]
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
